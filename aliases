alias v="nvim"
alias ta="tmux new -As0"
alias cat=bat
alias top="htop -u $USER"
alias p10kupdate="git -C ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/themes/powerlevel10k pull"
alias ncdu="ncdu --color off"
alias esync="rsync -ah --progress --stats --exclude-from $HOME/.rsync_exclude"
alias syncout='(){ aws s3 --region us-east-1 sync $1 s3://span-dev-users/aribhat/backups/$1 --exclude ".vscode/*" --exclude ".mypy_cache/*" --exclude ".venv/*" ;}'
alias syncin='(){ aws s3 --region us-east-1 sync s3://span-dev-users/aribhat/backups/$1 $1 ;}'

#portfwd() { ssh -fN -L "$3":localhost:"$2" $1 }
portfwd() { ssh -N -L "$3":localhost:"$2" $1 }

# AWS S3 related
alias s3ls="aws s3 --region us-east-1 ls"
alias s3tree="python $HOME/configs/s3tree.py"
alias s3cp="aws s3 --region us-east-1 cp"

# Python related
alias mi="mamba install -y"
alias ma="mamba deactivate && mamba activate"
alias md="mamba deactivate"

alias pi="pip install --upgrade"
pa() { deactivate && source ~/python_venvs/$1/bin/activate }
pc() { python$1 -m venv ~/python_venvs/$2 }
alias pd="deactivate && source ~/python_venvs/base/bin/activate"
alias pl="ls -1 ~/python_venvs/"

regkernel() { pip install --upgrade ipykernel && python -m ipykernel install --user --name=$1 }

alias ac="accelerate config"
alias al="accelerate launch"
alias tb="tensorboard --logdir"


# updates
alias vim_update="git -C $HOME/nvim pull"
alias conf_update="git -C $HOME/configs pull"
alias update="bubu && p10kupdate && vim_update && conf_update && omz update"
